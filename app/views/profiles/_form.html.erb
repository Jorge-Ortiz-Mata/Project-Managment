<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div><br>

  <div>
    <%= form.label :birth, style: "display: block" %>
    <%= form.date_field :birth %>
  </div><br>

  <div>
    <%= form.label :position, style: "display: block" %>
    <%= form.text_field :position %>
  </div><br>

  <div class="form-group">
    <%= form.label :project_role, style: "display: block" %>
    <%= form.select :project_role, ["Project leader", "Team member"], class:"form-control" %>
  </div><br>

  <div>
    <%= form.label :plan, style: "display: block" %>
    <%= form.select :plan, ["Free", "Premium"], class:"form-control" %>
  </div><br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
