<!DOCTYPE html>
<html>
  <head>
    <title>Saas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <header>
      <%= render 'shared/header' %>
    </header>

    <% if notice %>
      <%= render 'shared/notice' %>
    <% elsif alert %>
      <%= render 'shared/alert' %>
    <% end %>

    <%= yield %>
  </body>
</html>
