<div id="<%= dom_id project %>">
  <div class="card"> 
    <div class="card-body">
      <h5 class="card-title">
        <strong>Title:</strong> <%= project.title %>
      </h5>

      <p class="card-text">
        <small><strong>Admin:</strong> <%= project.user.email %></small><br> <br>
        <strong>Description:</strong> <%= project.description %><br><br>
        <strong>Created at:</strong> <%= project.user.email %><br>
      </p>

      <div>
        <%= link_to "See more", project, class:"btn btn-primary" if request.path == root_path %>
      </div>

    </div>
  </div>
</div>

